<div class="container" data-controller="default">
  <h1 class="text-center mb-3">Choose Your Filters</h1>
  <p class="text-center mb-3">Choose from defaults or create your own</p>
  <div class="default-events">
    <div class="default-events" id="#vault-events-container">
      <ul id="vault-events" class="list-unstyled d-flex justify-content-start gap-3">
        <% @events.each do |event| %>
          <li><%= link_to event.title, edit_event_path(event), class: "btn default vault-event", data: {default_target: "defaultEvent", action: "click->default#renderDefault"} %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <%= render 'events/event_form', event: @event %>
</div>
